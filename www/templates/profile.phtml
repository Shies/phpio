                  $traces = array();
                  foreach($row['trace'] as $trace) {
                      preg_match('|\[(.*?)\:(\d+)\]|', $trace, $matches);
                      $matches[0] = $trace;
                      // get source file hash
                      if ( isset($data[0]['_SRC'][ $matches[1] ]) ) {
